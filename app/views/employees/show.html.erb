<div class="card">
  <div class="card-header">
    <h3><%= @employee.name %></h3>
  </div>
  <div class="card-body">
    <h5 class="card-title">Active: <%= @employee.active %></h5>
    <h5 class="card-text">Department: <%= @employee.department.name %></h5>
    <a href="<%= employees_path %>" class="btn btn-secondary">Back</a>
    <% if user_signed_in? %>
    <a href="<%= edit_employee_path %>" class="btn btn-secondary">Edit</a>
    <% end %>
  </div>
</div>