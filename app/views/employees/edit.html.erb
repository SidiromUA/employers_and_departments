<% if user_signed_in? %>
<div class='container'>
<h1 class="display-4 is-4">Edit Employee</h1>
<%= form_with model: @employee, local: true do |form| %>

<div class="form-group">
  <%= form.label :name %>
  <%= form.text_field :name, class: 'form-control' %>
</div>

<div class="form-group">
  <%= form.label :department %>
  <%= form.collection_select :department_id, Department.order(:name),:id,:name, include_blank: false, class: 'form-control' %>
</div>

<div class="form-group">
  <%= form.label :active %>
  <%= form.check_box :active %>
</div>

<div class="form-group">
  <%= form.submit 'Save', class: 'btn btn-primary' %>
  <%= link_to 'Back', employees_path, class: 'btn btn-secondary' %>
  <% end %>
</div>
</div>
<% else %>
<center><%= link_to 'Please, sign in', new_user_session_path, class: 'btn btn-danger' %></center>
<% end %>