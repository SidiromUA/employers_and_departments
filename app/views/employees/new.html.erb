<div class='container'>
<h1 class="display-4 is-4">New employee</h1>
<%= form_with scope: :employee, url:  employees_path, local: true do |f| %>

<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :department %>
  <%= f.collection_select :department_id, Department.order(:name),:id,:name, include_blank: true, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.check_box :active %>  
  <%= f.label :active %>
</div>

<div class="form-group">
  <%= f.submit 'Add', class: 'btn btn-primary' %>
  <%= link_to 'Back', employees_path, class: 'btn btn-secondary' %>
  <% end %>
</div>
</div>